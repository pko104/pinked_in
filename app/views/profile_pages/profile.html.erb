<div class = "user-name">
  <h1><%= @user.first_name + " " + @user.last_name%></h1>
</div>

<div class = "summary">
  <%="Summary"%>
    <%if @summary%>
      <%=@summary.description%>
    <%end%>
    <div class = "new-summary">
      <%=form_for @new_summary do |f|%>
        <%= f.text_area :description, size: "40x10" %>
      <%end%>
    </div>
</div>

</br>

<div class = "experiences">
  <%="Experiences"%>
    <%if @experiences%>
      <%@experiences.each do |e|%>
        <%=e.description%>
      <%end%>
    <%end%>
    <div class = "new-experience">
      <%=form_for @new_experience do |f|%>
        <%= f.label :title%>
        <%= f.text_area :title%>
        <%= f.label :company_name%>
        <%= f.text_area :company_name%>
        <%= f.label :date%>
        <%= f.text_area :date%>
        <%= f.label :description%>
        <%= f.text_area :description, size: "40x10" %>
      <%end%>
    </div>
</div>

</br>

